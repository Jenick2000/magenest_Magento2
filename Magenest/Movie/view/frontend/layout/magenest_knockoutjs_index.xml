<?xml version="1.0" encoding="UTF-8" ?>
<page xmlns:xsi="//www.w3.org/2001/XMLSchema-instance" layout="1column"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <title>Knockout Js Testing Page</title>
    </head>
    <body>
        <referenceBlock name="content">
            <block class="Magenest\Movie\Block\Test" name="knockoutjs_test_block" template="Magenest_Movie::testKnockoutjs.phtml">
                <arguments>
                    <argument name="jsLayout" xsi:type="array">
                        <item name="components" xsi:type="array">
                            <item name="test" xsi:type="array">
                                <item name="component" xsi:type="string">Magenest_Movie/js/view/test</item>
                                <item name="displayArea" xsi:type="string">test</item>
                            </item>
                        </item>
                    </argument>
                </arguments>
            </block>
        </referenceBlock>
    </body>
</page>