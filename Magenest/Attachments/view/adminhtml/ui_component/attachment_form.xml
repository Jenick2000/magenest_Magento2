<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">attachment_form.attachment_form_data_source</item>
        </item>
        <item name="label" xsi:type="string" translate="true">Attachment Information</item>
        <item name="template" xsi:type="string">templates/form/collapsible</item>
    </argument>
    <settings>
        <buttons>
            <button name="save" class="Magenest\Attachments\Block\Adminhtml\Edit\SaveButton"/>
            <button name="save_and_continue" class="Magenest\Attachments\Block\Adminhtml\Edit\SaveAndContinueButton"/>
            <button name="delete" class="Magento\Cms\Block\Adminhtml\Block\Edit\DeleteButton"/>
            <button name="back" class="Magento\Cms\Block\Adminhtml\Block\Edit\BackButton"/>
        </buttons>
        <namespace>attachment_form</namespace>
        <dataScope>data</dataScope>
        <deps>
            <dep>attachment_form.attachment_form_data_source</dep>
        </deps>
    </settings>
    <dataSource name="attachment_form_data_source">
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
            </item>
        </argument>
        <settings>
            <submitUrl path="magenest/attachments/save"/>
        </settings>
        <dataProvider class="Magenest\Attachments\Model\Attachment\DataProvider" name="attachment_form_data_source">
            <settings>
                <requestFieldName>id</requestFieldName>
                <primaryFieldName>file_id</primaryFieldName>
            </settings>
        </dataProvider>
    </dataSource>
    <fieldset name="attachment_form">
        <settings>
            <label>Attachment Information </label>
        </settings>
        <field name="file_id" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">attachment_form</item>
                </item>
            </argument>
            <settings>
                <label>Id</label>
                <visible>false</visible>
                <dataType>text</dataType>
            </settings>
        </field>
        <field name="path" formElement="fileUploader">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">string</item>
                    <item name="component" xsi:type="string">Magento_Ui/js/form/element/file-uploader</item>
                    <item name="label" xsi:type="string" translate="true">File</item>
                    <item name="visible" xsi:type="boolean">true</item>
                    <item name="elementTmpl" xsi:type="string">ui/form/element/uploader/uploader</item>
                    <item name="required" xsi:type="boolean">false</item>
                    <item name="isMultipleFiles" xsi:type="boolean">false</item>
                    <item name="uploaderConfig" xsi:type="array">
                        <item name="url" xsi:type="url" path="magenest/attachments/upload"/>
                    </item>
                </item>
            </argument>
        </field>
        <field name="file_name" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">attachment_form</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label>File Name</label>
            </settings>
        </field>
        <field name="file_label" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">attachment_form</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label>Label</label>
            </settings>
        </field>
        <field name="customer_group_ids" formElement="multiselect">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">attachment_form</item>
                </item>
            </argument>
            <settings>
                <dataType>number</dataType>
                <label translate="true">Customer Groups</label>
                <dataScope>customer_group_ids</dataScope>
            </settings>
            <formElements>
                <multiselect>
                    <settings>
                        <options class="Magento\CatalogRule\Model\Rule\CustomerGroupsOptionsProvider"/>
                    </settings>
                </multiselect>
            </formElements>
        </field>
        <field name="active" formElement="checkbox">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">attachment_form</item>
                    <item name="default" xsi:type="number">1</item>
                </item>
            </argument>
            <settings>
                <dataType>boolean</dataType>
                <label translate="true">Active</label>
            </settings>
            <formElements>
                <checkbox>
                    <settings>
                        <valueMap>
                            <map name="false" xsi:type="number">0</map>
                            <map name="true" xsi:type="number">1</map>
                        </valueMap>
                        <prefer>toggle</prefer>
                    </settings>
                </checkbox>
            </formElements>
        </field>
        <field name="include_on_order" formElement="checkbox">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">attachment_form</item>
                    <item name="default" xsi:type="number">0</item>
                </item>
            </argument>
            <settings>
                <dataType>boolean</dataType>
                <label translate="true">Include on Order</label>
            </settings>
            <formElements>
                <checkbox>
                    <settings>
                        <valueMap>
                            <map name="false" xsi:type="number">0</map>
                            <map name="true" xsi:type="number">1</map>
                        </valueMap>
                        <prefer>toggle</prefer>
                        <description translate="true">Use Default</description>
                    </settings>
                </checkbox>
            </formElements>
        </field>
    </fieldset>
</form>
