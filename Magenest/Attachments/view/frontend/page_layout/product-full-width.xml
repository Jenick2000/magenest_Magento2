<layout xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_layout.xsd">

    <referenceContainer name="product.info.details.after.wrapper.columns">

        <block class="Magento\Framework\View\Element\Template" name="product.course.wrapper" before="-" template="Magento_PageBuilder::catalog/product/view/section_wrapper.phtml">
            <arguments>
                <argument name="title" translate="true" xsi:type="string">Course</argument>
                <argument name="section_id" xsi:type="string">course</argument>
            </arguments>
            <block class="Magenest\Attachments\Block\Product\View\Type\Course" name="product.info.course.wrapper" template="Magenest_Attachments::product/view/sourse.phtml">
                <arguments>
                    <argument name="hide_title" xsi:type="boolean">true</argument>
                </arguments>
            </block>
        </block>
        <block class="Magento\Framework\View\Element\Template" name="product.timeline.wrapper" after="product.course.wrapper" template="Magento_PageBuilder::catalog/product/view/section_wrapper.phtml">
            <arguments>
                <argument name="title" translate="true" xsi:type="string">Timeline</argument>
                <argument name="section_id" xsi:type="string">timeline</argument>
            </arguments>
            <block class="Magenest\Attachments\Block\Product\View\Type\Course" name="product.info.timeline.wrapper" template="Magenest_Attachments::product/view/timeline.phtml">
                <arguments>
                    <argument name="hide_title" xsi:type="boolean">true</argument>
                </arguments>
            </block>
        </block>
    </referenceContainer>
</layout>
